<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/background_drawable_radius" />
            <stroke android:width="@dimen/background_drawable_stroke_width" android:color="@color/gray_light" />
            <solid android:color="@color/gray_light" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/background_drawable_radius" />
            <stroke android:width="@dimen/background_drawable_stroke_width" android:color="@color/green_light" />
            <solid android:color="@color/green_light" />
        </shape>
    </item>
</selector>